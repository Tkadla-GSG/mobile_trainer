<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chooseExcerciseLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/KebapWhite" >

    <ListView
        android:id="@android:id/list"
        style="@style/layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/searchbar"
        android:cacheColorHint="@color/KebapWhite"
        android:drawSelectorOnTop="true" />

    <!-- SearchBar -->

    <RelativeLayout
        android:id="@+id/searchbar"
        style="@style/searchbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/actionbar_height" >

        <EditText
            android:id="@+id/searchField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/white_large_text"
            android:background="@drawable/textfield_default_holo_dark"
            android:ems="8"
            android:hint="@string/search_field_text"
            android:inputType="text" >
        </EditText>

        <ImageButton
            android:id="@+id/clearSearchBtn"
            android:layout_width="@dimen/actionbar_height"
            android:layout_height="@dimen/actionbar_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/search_button_selector"
            android:contentDescription="@string/search_btn_hint"
            android:onClick="ontoggleSearchBtnClick" >

            <requestFocus />
        </ImageButton>
    </RelativeLayout> <!-- End of SearchBar -->


    <!-- ActionBar -->

    <RelativeLayout
        android:id="@+id/actionbar"
        style="@style/actionbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/actionbar_height" >

        <ImageButton
            android:id="@+id/toogleSearchBtn"
            android:layout_width="@dimen/actionbar_height"
            android:layout_height="@dimen/actionbar_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/search_button_selector"
            android:contentDescription="@string/search_btn_hint"
            android:onClick="ontoggleSearchBtnClick" >

            <requestFocus />
        </ImageButton>

        <Spinner
            android:id="@+id/spinner_list_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/custom_spinner"
            android:popupBackground="@drawable/custom_spinner_dropdown" />
    </RelativeLayout> <!-- End of ActionBar -->

</RelativeLayout>