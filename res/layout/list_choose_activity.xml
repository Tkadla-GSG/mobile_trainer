<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chooseExcerciseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/KebapWhite" >

    <ListView
        android:id="@+id/list"
        style="@style/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:cacheColorHint="@color/KebapWhite"
        android:drawSelectorOnTop="true" />

    <!-- SearchBar -->

    <RelativeLayout
        android:id="@+id/searchbar"
        style="@style/searchbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height">

        <EditText
            android:id="@+id/searchField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/white_large_text"
            android:background="@drawable/textfield_default_holo_dark"
            android:ems="8"
            android:hint="@string/search_field_text"
            android:inputType="text" >
        </EditText>

        <ImageButton
            android:id="@+id/clearSearchBtn"
            style="@style/closeButton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/actionbar_height"
            android:layout_height="@dimen/actionbar_height"
            android:contentDescription="@string/search_btn_hint"
            android:onClick="onToggleSearchBtnClick" >

            <requestFocus />
        </ImageButton>
    </RelativeLayout> <!-- End of SearchBar -->


    <!-- ActionBar --> <!-- End of ActionBar -->

</RelativeLayout>